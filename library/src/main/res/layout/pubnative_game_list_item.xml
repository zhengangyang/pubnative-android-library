<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/pn_game_list_item_icon"
        android:layout_width="@dimen/pn_game_list_item_icon_size"
        android:layout_height="@dimen/pn_game_list_item_icon_size"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/pn_game_list_item_title"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pn_game_list_item_icon" />

    <RatingBar
        android:id="@+id/pn_game_list_item_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pn_game_list_item_title"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/pn_game_list_item_icon"
        android:isIndicator="true" />

    <TextView
        android:id="@+id/pn_game_list_item_cta"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pn_game_list_item_title"
        android:background="#0099CC"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp" />
</RelativeLayout>